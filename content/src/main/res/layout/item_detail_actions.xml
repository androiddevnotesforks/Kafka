<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="playClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="favoriteClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium_2"
            android:background="?selectableItemBackground"
            android:backgroundTint="@color/background"
            android:onClick="@{favoriteClickListener}"
            android:outlineAmbientShadowColor="@color/shadow"
            android:outlineSpotShadowColor="@color/shadow"
            android:src="@drawable/ic_heart_sign"
            app:borderWidth="0dp"
            app:elevation="12dp"
            app:fabSize="normal"
            app:rippleColor="@color/surface_light"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium_2"
            android:background="?selectableItemBackground"
            android:backgroundTint="@color/background"
            android:outlineAmbientShadowColor="@color/shadow"
            android:outlineSpotShadowColor="@color/shadow"
            android:src="@drawable/ic_download"
            app:borderWidth="0dp"
            app:elevation="12dp"
            app:fabSize="normal"
            app:rippleColor="@color/surface_light"
            tools:ignore="ContentDescription" />

        <Button
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium_2"
            android:layout_weight="1"
            android:backgroundTint="@color/background"
            android:elevation="12dp"
            android:onClick="@{playClickListener}"
            android:outlineAmbientShadowColor="@color/shadow"
            android:outlineSpotShadowColor="@color/shadow"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_download"
            android:text="@string/play"
            android:textAppearance="@style/TextAppearance.Coyote.Button"
            app:elevation="12dp"
            app:icon="@drawable/ic_headphones"
            app:iconGravity="textStart"
            app:iconTint="@color/icon_tint"
            tools:text="Play" />
    </LinearLayout>
</layout>
