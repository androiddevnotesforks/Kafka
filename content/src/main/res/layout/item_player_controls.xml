<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="?selectableItemBackground"
                android:backgroundTint="@color/background"
                android:outlineAmbientShadowColor="@color/surface"
                android:outlineSpotShadowColor="@color/surface"
                android:src="@drawable/ic_heart_sign"
                app:borderWidth="0dp"
                app:elevation="12dp"
                app:rippleColor="@color/surface_light"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="?selectableItemBackground"
                android:backgroundTint="@color/background"
                android:outlineAmbientShadowColor="@color/surface"
                android:outlineSpotShadowColor="@color/surface"
                android:src="@drawable/ic_step_backward"
                app:borderWidth="0dp"
                app:elevation="12dp"
                app:rippleColor="@color/surface_light"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="?selectableItemBackground"
                android:backgroundTint="@color/background"
                android:outlineAmbientShadowColor="@color/surface"
                android:outlineSpotShadowColor="@color/surface"
                android:src="@drawable/ic_play"
                app:borderWidth="0dp"
                app:elevation="12dp"
                app:rippleColor="@color/surface_light"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="?selectableItemBackground"
                android:backgroundTint="@color/background"
                android:outlineAmbientShadowColor="@color/surface"
                android:outlineSpotShadowColor="@color/surface"
                android:src="@drawable/ic_skip_forward"
                app:borderWidth="0dp"
                app:elevation="12dp"
                app:rippleColor="@color/surface_light"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="?selectableItemBackground"
                android:backgroundTint="@color/background"
                android:outlineAmbientShadowColor="@color/surface"
                android:outlineSpotShadowColor="@color/surface"
                android:src="@drawable/ic_download"
                app:borderWidth="0dp"
                app:elevation="12dp"
                app:rippleColor="@color/surface_light"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/wave2" />
    </LinearLayout>
</layout>
