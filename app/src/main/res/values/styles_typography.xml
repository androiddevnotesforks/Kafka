<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Coyote.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/circular_std_black</item>
        <item name="android:fontFamily">@font/circular_std_black</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.Coyote.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/circular_std_medium</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Coyote.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/circular_std_black</item>
        <item name="android:fontFamily">@font/circular_std_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Coyote.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">34.54sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.Coyote.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/circular</item>
        <item name="android:fontFamily">@font/circular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Coyote.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/alegreya_bold</item>
        <item name="android:fontFamily">@font/alegreya_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_subheading</item>
    </style>

    <style name="TextAppearance.Coyote.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/circular_std_medium</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_subheading</item>
    </style>

    <style name="TextAppearance.Coyote.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/circular_std_medium</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_subheading</item>
    </style>

    <style name="TextAppearance.Coyote.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/circular</item>
        <item name="android:fontFamily">@font/circular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_heading</item>
    </style>

    <style name="TextAppearance.Coyote.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Coyote.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:shadowColor">@color/shadow_light</item>
    </style>

    <style name="TextAppearance.Coyote.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/circular_std_medium</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.004</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="TextAppearance.Coyote.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12.19sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextAppearance.Coyote.PopupMenu.Header" parent="TextAppearance.Coyote.Button">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
