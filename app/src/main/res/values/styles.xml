<resources>

    <style name="FrameTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:fontFamily">sans-serif</item>

        <!--<item name="android:fontFamily">@font/open_sans</item>-->

        <item name="textAppearanceHeadline1">@style/Headline5</item>
        <item name="textAppearanceHeadline2">@style/Headline4</item>
        <item name="textAppearanceBody1">@style/Body1</item>
        <item name="textAppearanceBody2">@style/Body2</item>

        <item name="android:textColorPrimary">@color/text_heading</item>
        <item name="android:textColorSecondary">@color/text_body_1</item>
        <item name="android:textColorHint">@color/text_body_2</item>
    </style>

    <style name="FrameTheme.ThemeTransitionAnimation">
        <item name="android:windowEnterAnimation">@anim/window_fade_in</item>
        <item name="android:windowExitAnimation">@anim/window_fade_out</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_body_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_body_2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
</resources>
