<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.Theme.Coyote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <style name="Base.Theme.Coyote" parent="Platform.Theme.Coyote">
        <item name="actionBarTheme">@style/ThemeOverlay.Coyote.ActionBar</item>

        <item name="windowActionModeOverlay">true</item>

        <!-- Default widget styles -->
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="android:shadowColor">@color/background_light</item>

        <!-- Type styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Coyote.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Coyote.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Coyote.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Coyote.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Coyote.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Coyote.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Coyote.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Coyote.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Coyote.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Coyote.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Coyote.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Coyote.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Coyote.Overline</item>

        <item name="android:colorBackground">@color/background_light</item>

        <item name="textAppearanceLargePopupMenu">?attr/textAppearanceBody1</item>
        <item name="textAppearanceSmallPopupMenu">?attr/textAppearanceBody2</item>
        <item name="textAppearancePopupMenuHeader">@style/TextAppearance.Coyote.PopupMenu.Header</item>
    </style>


    <style name="Theme.Coyote" parent="Base.Theme.Coyote">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/onAccent</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="android:colorBackground">@color/background</item>

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:shadowColor">@color/app_red</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Coyote.ThemeTransitionAnimation">
        <item name="android:windowEnterAnimation">@anim/window_fade_in</item>
        <item name="android:windowExitAnimation">@anim/window_fade_out</item>
    </style>

    <style name="Theme.Coyote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Coyote.Immerse" parent="Theme.Coyote.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">#B3FFFFFF</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Coyote.Settings" />

    <style name="ThemeOverlay.Coyote.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="ThemeOverlay.Coyote.Primary" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

</resources>
